{
    // Try to set Bash as default for Linux/Mac
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.defaultProfile.osx": "bash",

    // For Windows, it's trickier. "Git Bash" is the standard name.
    "terminal.integrated.defaultProfile.windows": "Git Bash",

    // Optional: If you want to be safe, define what "bash" actually is
    "terminal.integrated.profiles.linux": {
        "bash": {
            "path": "bash",
            "icon": "terminal-bash"
        }
    },

    "workbench.tree.indent": 40,
    "workbench.tree.renderIndentGuides": "always",
    "editor.guides.bracketPairs": "active",
    "workbench.editor.enablePreview": false,
    "terminal.integrated.focusAfterLaunch": true,
    "workbench.colorCustomizations": {
        "tree.indentGuidesStroke": "#ffffff"
    },

    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    // Instantly find symbols (methods/variables) without scrolling
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",

    // Sticky Scroll: Keeps the function/class header at the top as you scroll
    "editor.stickyScroll.enabled": true,
    "editor.stickyScroll.maxLineCount": 5,

    "workbench.iconTheme": "vscode-icons",
    "explorer.copyRelativePathSeparator": "/",
    "python.terminal.activateEnvInCurrentTerminal": true,
    "[python]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "always",
        "source.organizeImports.ruff": "always"
        },
        "editor.defaultFormatter": "charliermarsh.ruff"
    },
    "black-formatter.args": [
        "--line-length=120"
    ],
    "isort.args": ["--profile", "black"],
    "flake8.args": ["--max-line-length=120"],
    "editor.inlineSuggest.enabled": true,
    "security.workspace.trust.untrustedFiles": "open",

    "terminal.integrated.scrollback": 5000,
    "editor.minimap.enabled": false,
    "editor.wordWrap": "on",
    "python.analysis.autoImportCompletions": true,
    "files.autoSave": "onFocusChange",
    "parquet-viewer.format": "csv",

    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true,
        "**/__pycache__/**": true,
        "**/.venv/**": true,
    },
    "files.exclude": {
		"**/.vscode": false,
		"**/.git": false,
        "**/*.pyc": true,
        "**/*egg-info": true,
        "**/*pytest_cache": true,
        "**/__pycache__": true,
    },

}
